.history
  background: #F2F2F4;
  #header
    display flex
    align-items center
    justify-content space-around
    height 50px
    background lightblue
    img
      height 40px
    #title
      font-size 1.4rem
      font-weight bold
  .show
    padding 2rem 0
    position: relative
    .title
      display flex
      position relative
      align-items center
      top 0
      .icon-time
        position absolute
        width 2.2rem
        height 2.2rem
        border-radius 50%
        text-align center
        font-size 1.2rem
        line-height 2.2rem
        background #33a3dc
        background-size contain
        left 1.81875rem
        color #fff
        transform translateX(-50%)
      h3
        font-size 1.4rem
        text-align center
        margin-left 1rem
        width 100%
        font-weight bold
    .selDate
      position absolute
      height 2rem
      top 4rem
      left 50%
      transform translateX(-50%)
      z-index 10
    .hisList
      position relative
      padding 2rem 0 4rem
      &::before
        content ""
        display block
        width 2px
        height 100%
        background #33a3dc
        border-radius 2px
        position: absolute
        top 0
        left 1.81875rem
        transform translateX(-50%)
      .listItem
        // background #ff6700
        margin 1.2rem 0
        display flex
        align-items center
        justify-content space-around
        .year
          position relative
          height 2.5rem
          line-height 2.5rem
          flex 1
          text-align center
          color: #2a5caa
          background: #F2F2F4;
          &::before
            content ""
            display block
            width 6px
            height 6px
            background #33a3dc
            border-radius 3px
            position absolute
            top -1px
            left 50%
            transform translateX(-50%)
          &::after
            content ""
            display block
            width 6px
            height 6px
            background #33a3dc
            border-radius 3px
            position absolute
            bottom -1px
            left 50%
            transform translateX(-50%)
        .detail
          background #fff
          width 19rem
          margin-right .8rem
          a
            display flex
            img
              width 4.5rem
              height 4.5rem
            .text
              line-height 1.6
              padding 0 .6rem
