.weather
  color #fff
  // height 38.6875rem
  // margin-bottom 3rem
  overflow hidden
  background url(../assets/img/bg-sky-mun.jpg) no-repeat fixed top/100% 38.6875rem
  .container
    overflow: scroll
    height 38.6875rem
    #header
      display flex
      align-items center
      justify-content center
      height 50px
      background lightblue
      img
        margin 0 20px
        height 40px
      #title
        font-size 1.4rem
        font-weight bold
        color #000
    .show
      .detail
        overflow: hidden
        &>div
          margin 1rem
      .tmp-cloud
        display flex
        align-items center
        justify-content space-between
        .tmp
          font-size 6rem
          span
            display block
            position: relative
            font-family Arial
            i
              display block
              position: absolute
              top 1rem
              right -1rem
              width 1rem
              height 1rem
              border .2rem solid #fff
              border-radius 50%
        //.cloud
        //  display flex
        //  align-items center
        //  flex-direction column
        //  padding-left 1rem
        //  padding-bottom 1rem
        .img
          display flex
          align-items center
          width 5rem
          height 5rem
          border-radius 8px
          background #fff
          opacity .9
          line-height 8rem
          margin-right 1rem
          box-shadow 0 0 12px 9px #fff;
          img
            width 5rem
            margin 0 auto
        .cond_txt
          font-size 2rem
          font-weight bold
      .about
        display flex
        font-size 1.2rem
        div
          display flex
          flex 1
          align-items center
    .hourly
      position relative
      margin 1rem
      height 15rem
      overflow hidden
      background rgba(27,94,173,0.6)
      h3
        padding .8rem
      .chart-con
        overflow hidden
        position: relative
        top -3.6rem
        .hourly-detail
          display flex
          position: absolute
          justify-content space-around
          top 10.3rem
          left 50%
          padding 0 2.5rem
          transform translateX(-50%)
          width 25rem
          li
            display flex
            flex-direction column
            align-items center
            .humidity
              display flex
              align-items center
              margin-bottom .3rem
              img
                width .6rem
              span
                font-family Arial
                font-size 12px
            .cloud
              width 2rem
              height 2rem
              border-radius 4px
              background rgba(255, 255, 255, 1)
              img
                display inline-block
                width 2rem
    .lifestyle
      position relative
      margin 1rem
      overflow hidden
      background rgba(0, 0, 0, .5)
      h3
        padding .8rem
      ul
        padding .8rem
        li
          border-top 1px solid #ddd
          padding .4rem 0
          .type
            padding .6rem 0
          .style-detail
            color #ddd
            line-height 1.4
